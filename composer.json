{
    "name": "sharif/simple-error-pages",
    "authors": [
        {
            "name": "Sharif Mohammad Eunus",
            "email": "sharif.eunus@gmail.com"
        }
    ],
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require-dev": {
        "wp-coding-standards/wpcs": "^3.0"
    },
    "scripts": {
        "phpcs": "phpcs -p --colors --extensions=php --standard=WordPress --ignore=\"*/tests /*,*/node_modules /*,*/vendor/*\" ./",
        "phpcbf": "phpcbf -p --colors --extensions=php --standard=WordPress --ignore=\"*/tests /*,*/node_modules /*,*/vendor/*\" ./"
    }
}